# Environment Variables for Health Insights AI
# Copy this file to .env.local for local development

# Database Configuration
# Prisma supports PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB
DATABASE_URL="file:./prisma/dev.db"

# Authentication - Clerk (primary auth system)
# Get these from https://dashboard.clerk.dev/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="your_clerk_publishable_key"
CLERK_SECRET_KEY="your_clerk_secret_key"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# Google AI (Gemini) API Key
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your_gemini_api_key"

# Admin Configuration
ADMIN_EMAIL="your_admin_email@example.com"
ADMIN_PASSWORD="your_admin_password"
NEXT_PUBLIC_ADMIN_KEY="your_admin_key" # Used for accessing admin page

# AI Model Configuration
# Available models: gemini-1.5-pro, gemini-1.5-flash, etc.
DEFAULT_GEMINI_MODEL="gemini-1.5-flash"
USE_FALLBACK_MODEL="true"
MAX_OUTPUT_TOKENS="2048"

# System Configuration
SYSTEM_PROMPT="You are a health analysis assistant that helps users understand their bloodwork and medical reports."

# OpenAI API Key (optional - for future integration)
# OPENAI_API_KEY="your_openai_key"

# Vercel Blob Storage (optional - for file uploads)
# BLOB_READ_WRITE_TOKEN="your_blob_rw_token"
